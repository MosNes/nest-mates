<body>
    <h2>To get started please fill out the form below</h2>
    <!-- Sign up Form -->
    <form class="box">
        <div class="field">
            <label for="name" class="label"><strong>Enter first and last name:<strong/></label>
            <div class="control">
                <input class="input" type="text" placeholder="Enter your full name here"/>  
            </div>
        </div>

        <div class="field">
            <label for="email" class="label"><strong>Enter Email Address:<strong/></label>
            <div class="control">
                <input class="input" type="email" placeholder="e.g. alex@example.com"/>                
            </div>
        </div>

        <div class="field">
            <label for="username" class="label"><strong>Enter your Username:<strong/></label>
            <div class="control">
                <input class="input" type="text" placeholder="Enter your username"/>
            </div>
        </div>

        <div class="field">
            <label for="pwd" class="label"><strong>Password:<strong/></label>
            <div class="control">
                <input class="input" type="password" placeholder="I promise I'm not keylogging"/>
            </div>
        </div>

        <div class="field">
            <label for="share-id" class="label"><strong>"Nest" Address:<strong/></label>
            <div class="control">
                <input class="input" type="text" placeholder="Enter your Share ID to join a nest"/>
            </div>
        </div>

        <button class="button-is-primary"> SIGN-UP </button>
    </form>
</body>