
    

    <form id="login-form" class="form box">
        <h2>Please login to your account</h2>
        
        <div class="field">
            <label for="username" class="label"><strong>Enter your Username or Email:<strong/></label>
            <div class="control">
                <input id="username" class="input" type="text" placeholder="Enter your username"/>
            </div>
        </div>

        <div class="field">
            <label for="pwd" class="label"><strong>Password:<strong/></label>
            <div class="control">
                <input id="password" class="input" type="password" placeholder="I promise I'm not keylogging"/>
            </div>
        </div>

        <button class="button is-primary"> LOG-IN </button>
    </form>
    <script src="/javascript/login.js"></script>
